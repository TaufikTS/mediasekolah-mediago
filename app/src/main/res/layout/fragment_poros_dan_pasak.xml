<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <ScrollView
        android:id="@+id/svLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. Pengertian Poros dan Pasak"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="a. Pengertian Poros"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/pengertian_poros"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px" />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Poros"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="b. Pengertian Pasak"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/pengertian_pasak"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px" />

                        <ImageView
                            android:layout_width="306dp"
                            android:layout_height="158dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Pasak"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. Jenis-Jenis Poros"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Poros memiliki tiga jenis yaitu sebagai berikut."
                            android:textSize="16dp"
                            />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="a. Poros Transmisi"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/poros_transmisi"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px"
                            />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_3" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Poros Transmisi"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="b. Spindle"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/spindle"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px"
                            />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_4" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Spindle"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="c. Gandar"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/gandar"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px"
                            />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_5" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Gandar"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. Jenis-Jenis Pasak"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Pasak memiliki 4 jenis yaitu sebagai beriku"
                            android:textSize="16dp"
                            />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="a. Pasak Benam (BP)"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/BP"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px"
                            />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_6" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Pasak Benam"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="b. Pasak Pelana"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/pasak_pelana"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px"
                            />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_7" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Pasak pelana"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />
                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="c. Pasak Bulat"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/pasak_bulat"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px"
                            />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_8" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Pasak bulat"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />

                        <TextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="d. Pasak Bintang (Spline)"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            />

                        <io.github.leibnik.justifytextview.JustifyTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:text="@string/pasak_bintang"
                            android:textSize="16dp"
                            app:align_chars="true"
                            app:character_space="0px"
                            android:layout_marginLeft="36dp"
                            app:line_space="3px"
                            />

                        <ImageView
                            android:layout_width="270dp"
                            android:layout_height="151dp"
                            android:layout_gravity="center"
                            android:src="@drawable/transmisi_poros_pasak_9" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar : Pasak bintang (spline)"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>